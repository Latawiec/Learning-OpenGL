    "version": "0.2.0",
    "configurations": [
        {
            "name": "(LLDB) Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/OpenGLTutorial/OpenGLTutorial",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build"
        },
        {
            "name": "(CL) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\OpenGLTutorial\\Debug\\OpenGLTutorial.exe",
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "preLaunchTask": "Build"
        }
    ]
}